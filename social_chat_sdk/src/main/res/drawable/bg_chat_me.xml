        <shape>
            <corners android:bottomLeftRadius="14dp" android:bottomRightRadius="1dp" android:topLeftRadius="14dp" android:topRightRadius="14dp" />
            <solid android:color="@color/chat_blue" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape>
            <corners android:bottomLeftRadius="14dp" android:bottomRightRadius="1dp" android:topLeftRadius="14dp" android:topRightRadius="14dp" />
            <solid android:color="@color/fui_buttonShadow" />
        </shape>
    </item>
</selector>